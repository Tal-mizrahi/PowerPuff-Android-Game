<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:keepScreenOn="true"
        tools:context=".views.activities.LeaderBoardActivity"
        android:background="@drawable/splash_gradient_background" >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ppg_BTN_back"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_left_arrow"
        android:tint="#E72567"
        />

         <androidx.appcompat.widget.LinearLayoutCompat
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_below="@id/ppg_BTN_back"
             android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/main_LAY_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="#DEDEDE"
                android:layout_weight="1"/>


            <FrameLayout
                android:id="@+id/main_LAY_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:background="#DEDEDE"
                android:layout_weight="1"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>
